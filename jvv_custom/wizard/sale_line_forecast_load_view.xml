<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record model="ir.ui.view" id="sale_line_forecast_load_form_view">
            <field name="name">sale.line.forecast.load.sale.form</field>
            <field name="model">sale.line.forecast.load</field>
            <field name="arch" type="xml">
                <form string="Cargar lÃ­nea venta">
                    <group colspan="4" col="4">
                        <field
              name="partner_id"
              select="1"
              colspan="4"
              domain="[('customer','=',True)]"
              context="{'search_default_customer':1, 'show_address': 1}"
              required="1"
            />
                        <field
              name="sale_id"
              colspan="4"
              required="1"
              domain="[('partner_id', '=', partner_id)]"
            />
                        <field
              name="product_id"
              required="1"
              colspan="4"
              context="{'partner_id': partner_id, 'supplierinfo_type': 'customer'}"
            />
                    </group>
                    <footer>
                        <button
              name="load_sales_lines"
              type="object"
              string="Load"
              class="oe_highlight"
            />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sale_line_forecast_load_view">
            <field name="name">sale.line.forecast.load</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.line.forecast.load</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="sale_line_forecast_load_form_view" />
        </record>
    </data>
</openerp>
