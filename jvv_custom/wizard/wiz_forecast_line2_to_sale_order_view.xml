<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <record id="wiz_forecast_line2_to_sale_order_form_view" model="ir.ui.view">
            <field name="name">wiz.forecast.line2.to.sale.order.form.view</field>
            <field name="model">wiz.forecast.line2.to.sale.order</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Forecast line to sale order">
                    You are going to a sale order line whith selected forecast lines
                    <group>
                        <group>
                            <field
                name="sale_order_id"
                required="1"
                domain="[('state','=', 'draft')]"
              />
                        </group>
                        <group />
                    </group>

                    <footer>
                        <button
              name="create_sale_order_line"
              type="object"
              string="Create sale order line"
              class="oe_highlight"
            />
                        or
                        <button string="Cancelar" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
