<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_users_form_inh_jvv" model="ir.ui.view">
        <field name="name">view.users.form.inh.jvv</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
			<xpath expr="//sheet/div[1]/button[1]" position="attributes">
				<attribute name="groups">base.group_erp_manager</attribute>
			</xpath>
        </field>
    </record>

    <record id="view_users_form_simple_modif_inh_jvv" model="ir.ui.view">
        <field name="name">view.users.form.simple.modif.inh.jvv</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <button name="preference_change_password" position="attributes">
				<attribute name="groups">base.group_erp_manager</attribute>
			</button>
        </field>
    </record>
</odoo>
