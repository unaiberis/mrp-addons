<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_repair_order_form_inh_partner_lot" model="ir.ui.view">
        <field name="name">view.repair.order.form.inh.partner.lot.jvv.custom</field>
        <field name="model">mrp.repair</field>
        <field
        name="inherit_id"
        ref="mrp_repair_partner_lot.view_repair_order_form_inh_partner_lot"
      />
        <field name="arch" type="xml">
             <xpath
          expr="//tree[@name='tree-customer-lots']/field[@name='lot_id']"
          position="after"
        >
                <field name="serial_number" />
             </xpath>
             <xpath
          expr="//form[@name='form-customer-lots']//field[@name='lot_id']"
          position="after"
        >
                <field name="serial_number" />
             </xpath>
        </field>
    </record>
</odoo>
