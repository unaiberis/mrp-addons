<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
<data>
        <record id="project_template_tree_view" model="ir.ui.view">
            <field name="name">project.template.tree.view</field>
            <field name="model">project.template</field>
            <field name="arch" type="xml">
                <tree string="Project templates">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="project_template_search_view" model="ir.ui.view">
            <field name="name">project.template.search.view</field>
            <field name="model">project.template</field>
            <field name="arch" type="xml">
                <search string="Search project template">
                    <field name="name" />
                </search>
            </field>
        </record>

        <record id="project_template_form_view" model="ir.ui.view">
            <field name="name">project.template.form.view</field>
            <field name="model">project.template</field>
            <field name="arch" type="xml">
                <form string="Project template">
                    <sheet>
                        <h1>
                            <field name="name" required="1" class="oe_inline" />
                        </h1>
                        <notebook>
                            <page string="Tasks">
                                <field name="task_ids">
                                    <tree string="Tasks" editable="top">
                                        <field name="template_id" invisible="1" />
                                        <field name="name" required="1" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_project_template_view" model="ir.actions.act_window">
            <field name="name">Project templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.template</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem
      id="project_teplate_option_view"
      name="Project templates"
      action="action_project_template_view"
      parent="project.menu_project_management"
      sequence="40"
      groups="project.group_project_manager"
    />
</data>
</openerp>
