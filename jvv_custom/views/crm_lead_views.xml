<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
<data>
    <record id="crm_case_form_view_leads_inh_jvv" model="ir.ui.view">
        <field name="name">crm.case.form.view.leads.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads" />
        <field name="arch" type="xml">
            <field name="categ_ids" position="before">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record id="crm_case_form_view_oppor_inh_jvv" model="ir.ui.view">
        <field name="name">crm.case.form.view.oppor.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor" />
        <field name="arch" type="xml">
            <field name="categ_ids" position="before">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record id="crm_case_tree_view_leads_inh_jvv" model="ir.ui.view">
        <field name="name">crm.case.tree.view.leads.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_leads" />
        <field name="arch" type="xml">
            <field name="section_id" position="after">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record id="crm_case_tree_view_oppor_inh_jvv" model="ir.ui.view">
        <field name="name">crm.case.tree.view.oppor.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor" />
        <field name="arch" type="xml">
            <field name="section_id" position="after">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record id="view_crm_case_leads_filter_inh_jvv" model="ir.ui.view">
        <field name="name">view.crm.case.leads.filter.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record id="view_crm_case_opportunities_filter_inh_jvv" model="ir.ui.view">
        <field name="name">view.crm.case.opportunities.filter.inh.jvv</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="offer_number" />
            </field>
        </field>
    </record>
    <record model="ir.actions.act_window" id="crm.crm_case_category_act_leads_all">
        <field name="name">Leads</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,tree,graph,form,calendar</field>
        <field name="domain">['|', ('type','=','lead'), ('type','=',False)]</field>
        <field name="view_id" ref="crm.crm_case_kanban_view_leads" />
        <field name="search_view_id" ref="crm.view_crm_case_leads_filter" />
        <field name="context">{
                'default_type':'lead',
                'stage_type':'lead',
                'needaction_menu_ref': 'crm.menu_crm_opportunities',
                'search_default_unassigned':1,
            }
        </field>
        <field name="help" type="html">
            <p>
                Use leads if you need a qualification step before creating an
                opportunity or a customer. It can be a business card you received,
                a contact form filled in your website, or a file of unqualified
                prospects you import, etc.
            </p><p>
                Once qualified, the lead can be converted into a business
                opportunity and/or a new customer in your address book.
            </p>
        </field>
    </record>
</data>
</openerp>
