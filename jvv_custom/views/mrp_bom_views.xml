<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>
    <record id="mrp_bom_tree_view_inh_jvv_custom" model="ir.ui.view">
        <field name="name">mrp.bom.tree.view.inh.jvv.custom</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="num_lines" />
            </field>
        </field>
    </record>

    <record id="mrp_bom_form_view_inh_jvv_custom" model="ir.ui.view">
        <field name="name">mrp.bom.form.view.inh.jvv.custom</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="num_lines" />
            </field>
            <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="my_counter" invisible="1"/>
            </xpath>
        </field>
    </record>
</data>
</openerp>
